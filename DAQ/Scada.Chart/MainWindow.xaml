<Window x:Class="Scada.Chart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:Scada.Chart"
        Title="MainWindow" Height="450" Width="525" Loaded="Window_Loaded_1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Click="Button_Click"></Button>

        <m:ChartView Grid.Row="1" x:Name="ChartView" Width="1000" TimeScale="4">
            
        </m:ChartView>
    </Grid>
</Window>
